<%layout('./partials/dashboardLayout')%>

<div class="container-fluid" id="vue-dashboard">
    <!-- Count user number -->
    <h2 style="padding-top: 2em;">User statistic</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card p-30">
                <div class="media media-info">
                    <div class="media-left">
                        <span><i class="fas fa-user-tie fa-3x "></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>{{admin}}</h2>
                        <p class="m-b-0">Admin</p>
                    </div>
                </div>   
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-30">
                <div class="media media-info">
                    <div class="media-left">
                        <span><i class="fas fa-user fa-3x"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>{{user}}</h2>
                        <p class="m-b-0">Normal user</p>
                    </div>
                </div>   
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-30">
                <div class="media media-info">
                    <div class="media-left">
                        <span><i class="fas fa-users fa-3x"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>{{admin+user}}</h2>
                        <p class="m-b-0">Total users</p>
                    </div>
                </div>   
            </div>
        </div>
    </div>
    <!-- User table -->
    <h2 style="padding-top: 1em;">User Edit Table</h2>
    <div class="table-responsive">  
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Modify</th>
                    <th>Deleted</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(row,index) in datas">
                    <td>{{index}}</td>
                    <td>{{row.usrName}}</td>
                    <td>{{row.role}}</td>
                    <td><a v-bind:href="'/forum/modifyPost?id='+row._id" class="btn"><i class="fas fa-wrench"></i></a></td>
                    <td><a role="button" class="btn" v-on:click="deleteReminder(row._id,row.forumList)"  data-toggle="modal" data-target="#emailModal"><i class="fas fa-eraser"></i></a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

</main>
</div>

<script src="/js/components/admin/dashboardControl.js"></script>