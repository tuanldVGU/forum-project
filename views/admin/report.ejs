<%layout('./partials/dashboardLayout')%>

<div class="container-fluid" id="vue-adminreport">
    <!-- Count user number -->
    <h2 style="padding-top: 2em;">Post report statistic</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="card p-30">
                <div class="media media-info">
                    <div class="media-left">
                        <span><i class="fas fa-user-tie fa-3x "></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>{{thisMonth}}</h2>
                        <p class="m-b-0">This month</p>
                    </div>
                </div>   
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-30">
                <div class="media media-info">
                    <div class="media-left">
                        <span><i class="fas fa-user fa-3x"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>{{thisYear}}</h2>
                        <p class="m-b-0">This year</p>
                    </div>
                </div>   
            </div>
        </div>
    </div>
    <!-- User table -->
    <div class="toolbar pt-3 pb-2">
        <h2>Unsolve Report</h2>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary">Delete all</button>
                <button class="btn btn-sm btn-outline-secondary" v:on-click="loadCategory">Refresh</button>
            </div>
        </div>
    </div>
    <div class="table-responsive">  
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Post name</th>
                    <th>Reason</th>
                    <th>Sent date</th>
                    <th>Delete report</th>
                    <th>Delete post</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(row,index) in report">
                    <td>{{row._id}}</td>
                    <td>{{row.post}}</td>
                    <td>{{row.reason}}</td>
                    <td>{{row.createdAt}}</td>
                    <td><a v-on:click="deleteReport(row._id,row.post)" class="btn"><i class="fas fa-wrench"></i></a></td>
                    <td><a role="button" class="btn" v-on:click="deleteReminder(row._id,row.forumList)"  data-toggle="modal" data-target="#emailModal"><i class="fas fa-eraser"></i></a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

</main>
</div>

<script src="/js/components/admin/reportControl.js"></script>