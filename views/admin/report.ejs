<%layout('./partials/dashboardLayout')%>

<div class="container-fluid" id="vue-adminreport">
    <!-- Count user number -->
    <h2 style="padding-top: 2em;">Post report statistic</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="card p-30">
                <div class="media media-info">
                    <div class="media-left">
                        <span><i class="fas fa-user-tie fa-3x "></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>{{thisMonth}}</h2>
                        <p class="m-b-0">This month</p>
                    </div>
                </div>   
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-30">
                <div class="media media-info">
                    <div class="media-left">
                        <span><i class="fas fa-user fa-3x"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>{{thisYear}}</h2>
                        <p class="m-b-0">This year</p>
                    </div>
                </div>   
            </div>
        </div>
    </div>
    <!-- User table -->
    <div class="toolbar pt-3 pb-2">
        <h2>Unsolve Report</h2>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary"data-toggle="modal" data-target="#deleteAllReport">Delete all</button>
                <button class="btn btn-sm btn-outline-secondary" v-on:click="loadReport()">Refresh</button>
            </div>
        </div>
    </div>
    <div class="table-responsive">  
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Post name</th>
                    <th>Reason</th>
                    <th>Sent date</th>
                    <th>Delete report</th>
                    <th>Delete post</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(row,index) in report">
                    <td>{{index}}</td>
                    <td><a v-bind:href="'/forum/article?id='+row.post" target="_blank">{{row.title}}</a></td>
                    <td>{{row.reason}}</td>
                    <td>{{row.createdAt}}</td>
                    <td><a v-on:click="updateData(row._id,row.post)" class="btn"data-toggle="modal" data-target="#deleteReport"><i class="fas fa-wrench"></i></a></td>
                    <td><a role="button" class="btn" v-on:click="updateData(row._id,row.post)"  data-toggle="modal" data-target="#deletePost"><i class="fas fa-eraser"></i></a></td>
                </tr>
            </tbody>
        </table>
    </div>
     <!-- Delete Post Modal -->
    <div class="modal fade" id="deletePost" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
        <div class="modal-dialog" role="document"> 
          <div class="modal-content">
                  <div class="modal-body">
                    <p class="lead">Do you want to delete this post</p>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-primary" v-on:click="deletePost(parseData.rid,parseData.pid)" data-dismiss="modal" >Continue</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" >Close</button>
                  </div>
          </div>
        </div>
    </div>
         <!-- Delete Report Modal -->
     <div class="modal fade" id="deleteReport" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
        <div class="modal-dialog" role="document"> 
            <div class="modal-content">
                <div class="modal-body">
                    <p class="lead">Do you want to delete this report</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" v-on:click="deleteReport(parseData.rid,parseData.pid)" data-dismiss="modal" >Continue</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" >Close</button>
                </div>
            </div>
        </div>
    </div>
     <!-- Delete  All Report Modal -->
     <div class="modal fade" id="deleteAllReport" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
        <div class="modal-dialog" role="document"> 
            <div class="modal-content">
                <div class="modal-body">
                    <p class="lead">Do you want to delete all report</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" v-on:click="deleteAllReport()" data-dismiss="modal" >Continue</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" >Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

</main>
</div>

<script src="/js/components/admin/reportControl.js"></script>