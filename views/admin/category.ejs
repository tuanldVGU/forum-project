<%layout('./partials/dashboardLayout')%>

<div class="container-fluid" id="vue-dashboard">
    <!-- Count user number -->
    <h2 style="padding-top: 2em;">Category statistic</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="card p-30">
                <div class="media media-info">
                    <div class="media-left">
                        <span><i class="fas fa-address-book fa-3x"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>{{brand.length}}</h2>
                        <p class="m-b-0">Brands</p>
                    </div>
                </div>   
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-30">
                <div class="media media-info">
                    <div class="media-left">
                        <span><i class="fas fa-motorcycle fa-3x"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>{{datas.length}}</h2>
                        <p class="m-b-0">Models</p>
                    </div>
                </div>   
            </div>
        </div>
    </div>
    <!-- User table -->
    <div class="toolbar pt-3 pb-2">
        <h2>Categories</h2>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary">Create</button>
                <button class="btn btn-sm btn-outline-secondary" v:on-click="loadCategory">Refresh</button>
            </div>
        </div>
    </div>
    <div class="table-responsive">  
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(row,index) in datas">
                    <td>{{index}}</td>
                    <td>{{row.brand}}</td>
                    <td>{{row.model}}</td>
                    <td>{{row.year}}</td>
                    <td><a role="button" class="btn" v-on:click="deleteReminder(row._id,row.forumList)"  data-toggle="modal" data-target="#emailModal"><i class="fas fa-eraser"></i></a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

</main>
</div>

<script src="/js/components/admin/categoryControl.js"></script>