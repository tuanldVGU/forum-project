<%layout('./partials/threadLayout')%>
<div id='vue-thread'>
    <div class="jumbotron bg-menu m-md-3" style="padding: 5rem 3rem 1rem;">
        <h1 class="display-4">{{info.forumName}}</h1>
        <p class="lead">{{info.description}}</p>
    </div>
    <div class="row" style="padding: 0 3rem;">
        <div class="col col-8">
            <input type="text" name="" v-model="searchbar" placeholder="Enter title, author, or categories ....." class="form-control" v-on:keyup.13="filteredtableData">
        </div>
        <div class="col col-2">
                <a class="btn btn-block btn-white" onclick="filterToggle();">Advance filter</a>   
            </div>
        <div class="col col-2">
            <a v-bind:href="'/forum/post?id='+id" class="btn btn-block btn-white"><i class="fas fa-plus"></i>  New Thread</a>     
        </div>
    </div>

    <!-- filter -->
    <div class="row hidden" style="padding: 2rem 5rem 0;" id="filter">
        <legend class="col-form-label col-sm-2 pt-0">Search for:</legend>
        <div class="col-sm-5">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="type" value="name" id="1sttype" checked> 
                <label class="form-check-label" for="1sttype">Name</label> 
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="type" value="category" id="2ndtype"> 
                <label class="form-check-label" for="2ndtype">Category</label> 
            </div>
        </div>
        <div class="col-sm-5">
            <div class="input-group">
                <label for="searchMonth" class="col-sm-2 col-form-label">Month</label>
                <div class="col-sm-10">
                    <input type="month" name="searchMonth" class="form-control" id="searchMonth">
                </div>
            </div>
        </div>
    </div>
    
    <div class="container-fluid" style="padding: 3rem 3rem 1rem;">
        <table class="table table-hover table-bottom-border">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Posted date</th>
                    <th scope="col">Views</th>
                    <th scope="col">Last post</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="row in filteredtableData">
                    <td><a v-bind:href="'/forum/article?id='+row.id">{{row.title}}</a></td>
                    <td>{{row.Postdate}}</td>
                    <td>{{row.comment}}</td>
                    <td>{{row.lastcomment}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<script src="/js/components/threadControl.js"></script>