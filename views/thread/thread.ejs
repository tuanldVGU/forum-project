<%layout('./partials/threadLayout')%>
<div id='vue-thread'>
    <div class="jumbotron bg-menu m-md-3" style="padding: 5rem 3rem 1rem;">
        <h1 class="display-4">{{info.forumName}}</h1>
        <p class="lead">{{info.description}}</p>
    </div>
    <div class="row" style="padding: 0 3rem;">
        <div class="col col-8">
            <input type="text" name="" id="" placeholder="Enter title, author, or categories ....." class="form-control">
        </div>
        <div class="col col-2">
                <a class="btn btn-block btn-white">Advance filter</a>   
            </div>
        <div class="col col-2">
            <a v-bind:href="'/forum/post?id='+id" class="btn btn-block btn-white"><i class="fas fa-plus"></i>  New Thread</a>     
        </div>
    </div>
    
    <div class="container-fluid" style="padding: 3rem 3rem 1rem;">
        <table class="table table-hover table-bottom-border">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Posted date</th>
                    <th scope="col">Views</th>
                    <th scope="col">Last post</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="row in tableData">
                    <td><a v-bind:href="'/forum/article?id='+row.id">{{row.title}}</a></td>
                    <td>{{row.Postdate}}</td>
                    <td>{{row.comment}}</td>
                    <td>{{row.lastcomment}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<script src="/js/components/threadControl.js"></script>