<%layout('./partials/layout')%>
<body class="bg-menu">
    <form class="form-post" method="POST" action="/service/api/post/forum" id="vue-form">
        <h1 class="brand">motor</h1>
        <h4>Create new forum</h4>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" class="form-control" required autofocus>
        <label for="category">Category</label>
        <input type="text" id="categoryText" name="category" class="form-control" readonly>
        <div class="form-row">
            <div class="col-md-8">
                <select name="addCategory" id="addCategory" class="form-control">
                    <option v-for="category in categories" v-bind:value="category">{{category}}</option>
                </select>
            </div>
            <div class="col-md-4">
                <button type="button" class="btn btn-white btn-block" v-on:click="addtotext">Add category</button>
            </div>
        </div>
        <button type="submit" class="btn btn-lg btn-block btn-white">Submit</button>
        <p class="mt-3 mb-3 text-muted">Â© Team 1 VGU 2018</p>
    </form>
