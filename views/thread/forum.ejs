<%layout('./partials/threadLayout')%>
<main>
    <div class="jumbotron bg-menu m-md-3" style="padding: 5rem 3rem 1rem;">
        <h1 class="display-4">Forum</h1>
        <p class="lead">Share, Support, and Thrive</p>
    </div>
    <div class="row overflow-hidden" style="padding: 0 5rem;">
        <div class="col col-8">
            <input type="text" name="" id="" placeholder="Search ..." class="form-control">
        </div>
        <div class="col col-2">
            <a class="btn btn-block btn-white" role="button" onclick="filterToggle();">Advance filter</a>   
        </div>
        <div class="col col-2">
            <a href="/forum/newforum" class="btn btn-block btn-white"><i class="fas fa-plus"></i>  New Forum</a>   
        </div>
    </div>

    <div class="row hidden" style="padding: 2rem 5rem 0;" id="filter">
        <legend class="col-form-label col-sm-2 pt-0">Search for:</legend>
        <div class="col-sm-5">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="type" value="name" id="1sttype" checked> 
                <label class="form-check-label" for="1sttype">Name</label> 
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="type" value="category" id="2ndtype"> 
                <label class="form-check-label" for="2ndtype">Category</label> 
            </div>
        </div>
        <div class="col-sm-5">
            <div class="input-group">
                <label for="searchMonth" class="col-sm-2 col-form-label">Month</label>
                <div class="col-sm-10">
                    <input type="month" name="searchMonth" class="form-control" id="searchMonth">
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid" style="padding: 2rem 3rem 1rem;" id='vue-forum'>
        <table class="table table-hover table-bottom-border">
            <thead>
                <tr>
                    <th scope="col">Forum name</th>
                    <th scope="col">Last Post</th>
                    <th scope="col">Threads</th>
                    <th scope="col">Posts</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="row in tableData">
                    <td><a v-bind:href="'/forum/thread?id='+row.id">{{row.forumName}}</a></td>
                    <td>{{row.lastPost}}</td>
                    <td>{{row.thread}}</td>
                    <td>{{row.post}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</main>
<script src="/js/components/forumControl.js"></script>