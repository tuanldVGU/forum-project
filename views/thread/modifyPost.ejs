<%layout('./partials/layout')%>
<body class="bg-menu">
    <form class="form-post" id="vue-modify-post">
        <h1 class="brand">motor</h1>
        <h4>Create new post</h4>
        <label for="title">Update post</label>
        <input type="text" id="post_id" name="postid" class="form-control" v-model="post.ID" readonly>

        <label for="title">Title</label>
        <input type="text" id="title" name="title" class="form-control" v-model="post.title" required autofocus>

        <label for="content">Content</label>
        <textarea id="content" name="description" class="form-control" v-model="post.content"> </textarea>

        <label for="category">Category</label>
        <input type="text" id="categoryText" name="category" class="form-control" v-model="post.category" readonly>
        <div class="form-row">
            <div class="col-md-8">
                <select name="addCategory" id="addCategory" class="form-control">
                    <option v-for="element in categories" v-bind:value="element._id">{{element.transportType}}+{{element.transportManufacture}}+{{element.transportModel}}+{{element.transportYear}}</option>
                </select>
            </div>
            <div class="col-md-4">
                <button type="button" class="btn btn-white btn-block" v-on:click="addtotext">Add category</button>
            </div>
        </div>

        <label for="author">Author</label>
        <input type="text" id="author" name="author" class="form-control" v-model="post.author"readonly>

        <button type="button" class="btn btn-lg btn-block btn-white" v-on:click="modifySent">Submit</button>

        <p class="mt-3 mb-3 text-muted">Â© Team 1 VGU 2018</p>
    </form>
    <script type="text/javascript" src="/js/lib/nicEdit.js"></script>
    <script src="/js/components/modifypostControl.js" type="module"></script>